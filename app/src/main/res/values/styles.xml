<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--        <item name="android:fitsSystemWindows">true</item>-->

        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>

    </style>

    <style name="TransparentStatusBar" parent="AppTheme">

        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="AppTheme.PopupOverlay">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabLayoutWhiteStyle" parent="Widget.Design.TabLayout">

        <!--        <item name="android:textViewStyle">@style/FontTextViewStyle</item>-->

        <!--<item name="tabMaxWidth">@dimen/_260sdp</item>-->
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabTextAppearance">@style/tabText</item>
        <item name="tabTextColor">@color/header2</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>

    </style>

    <style name="tabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/sky_reg</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="BottomDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@null</item>
        <!--<item name="android:windowNoTitle">true</item>-->
        <item name="android:windowIsFloating">true</item>

        <!--<item name="android:windowFullscreen">true</item>-->
        <!--<item name="android:backgroundDimEnabled">true</item>-->

    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="RatingBarStyle" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray6</item>
        <item name="colorControlActivated">@color/colorPrimary2</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="boxBackgroundMode">outline</item>
        <item name="hintTextColor">@color/colorPrimaryDark</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/round_corner_thin</item>
        <item name="boxCornerRadiusBottomStart">@dimen/round_corner_thin</item>
        <item name="boxCornerRadiusTopEnd">@dimen/round_corner_thin</item>
        <item name="boxCornerRadiusTopStart">@dimen/round_corner_thin</item>
        <item name="boxStrokeColor">@color/gray</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextAppearance">@style/hintTextColor</item>

    </style>

    <style name="hintTextColor" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="primaryBtnStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/round_corner_primary_fill</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <!--<item name="android:fontFamily">@font/swissra_normal</item>-->
    </style>

    <style name="spinner_trans_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/_35sdp</item>
        <!--<item name="android:background">@drawable/trans_spinner</item>-->
        <item name="android:background">@color/transparent</item>
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="editTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">@dimen/_6sdp</item>
        <item name="android:paddingBottom">@dimen/_6sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <!--        <item name="android:background">@android:color/transparent</item>-->
        <item name="android:minHeight">@dimen/_40sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColorHint">@color/gray6</item>

    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">start|center_vertical</item>

    </style>

</resources>