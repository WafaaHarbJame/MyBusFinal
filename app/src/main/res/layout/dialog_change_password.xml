<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_top_corner_white_fill"
        android:orientation="vertical"
        android:paddingTop="@dimen/_30sdp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:src="@drawable/hd_password" />

        <com.elaj.patient.spichalViews.STextViewBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-25dp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:gravity="center"
            android:text="@string/change_password"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_14ssp" />

        <com.elaj.patient.spichalViews.STextView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_20sdp"
            android:gravity="center"
            android:text="@string/fill_form_below_to_change_password"
            android:textColor="@color/colorAccent3"
            android:textSize="@dimen/_12ssp" />

        <com.elaj.patient.spichalViews.STextInputLayout
            android:id="@+id/currPasswordInput"
            style="@style/TextInputStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:hint="@string/current_password"
            app:passwordToggleEnabled="true">

            <com.elaj.patient.spichalViews.STextInputEditText
                android:id="@+id/currPasswordTV"
                style="@style/editTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />

        </com.elaj.patient.spichalViews.STextInputLayout>


        <com.elaj.patient.spichalViews.STextInputLayout
            android:id="@+id/newPasswordInput"
            style="@style/TextInputStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:hint="@string/new_password"
            app:passwordToggleEnabled="true">

            <com.elaj.patient.spichalViews.STextInputEditText
                android:id="@+id/newPasswordTV"
                style="@style/editTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />

        </com.elaj.patient.spichalViews.STextInputLayout>


        <com.elaj.patient.spichalViews.STextInputLayout
            android:id="@+id/confirmPasswordInput"
            style="@style/TextInputStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_25sdp"
            android:hint="@string/confirm_password"
            app:passwordToggleEnabled="true">

            <com.elaj.patient.spichalViews.STextInputEditText
                android:id="@+id/confirmPasswordTxt"
                style="@style/editTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />

        </com.elaj.patient.spichalViews.STextInputLayout>


        <com.elaj.patient.spichalViews.STextViewBold
            android:id="@+id/saveBtn"
            style="@style/primaryBtnStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:gravity="center"
            android:minWidth="@dimen/_100sdp"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>

</RelativeLayout>