<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:background="@drawable/round_corner_primary_trans"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:paddingStart="@dimen/_15sdp"
        android:paddingTop="@dimen/_15sdp"
        android:paddingBottom="@dimen/_15sdp"
        android:paddingEnd="@dimen/_15sdp">

        <com.mybus.mybusapp.spichalViews.STextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/full_name"
            android:id="@+id/nameTV"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/colorAccent"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textSize="@dimen/_12ssp"
            />
        <com.mybus.mybusapp.spichalViews.STextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_12ssp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/round_corner_primary_trans"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:paddingStart="@dimen/_15sdp"
        android:paddingBottom="@dimen/_15sdp"
        android:paddingTop="@dimen/_15sdp"
        android:paddingEnd="@dimen/_15sdp">

        <com.mybus.mybusapp.spichalViews.STextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/mobile_number"
            android:id="@+id/mobileTv"
            android:textColor="@color/colorAccent"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textSize="@dimen/_12ssp"
            />
        <com.mybus.mybusapp.spichalViews.STextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_12ssp"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/selectLocationLY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_primary_trans"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:paddingStart="@dimen/_15sdp"
            android:paddingTop="@dimen/_15sdp"
            android:visibility="gone"
            android:paddingEnd="@dimen/_15sdp"
            android:paddingBottom="@dimen/_10sdp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <com.mybus.mybusapp.spichalViews.STextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_location"
                        android:id="@+id/myLocationTv"
                        android:textAlignment="viewStart"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_14ssp" />
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                    </Space>
                    <com.mybus.mybusapp.spichalViews.STextViewIcon
                        android:id="@+id/editMyLocationBtn"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="top|end"
                        android:background="@drawable/round_corner_accent_fill"
                        android:gravity="center"
                        android:text="@string/fa_pen_edit"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13ssp"
                        android:visibility="gone" />

                </LinearLayout>

                <com.mybus.mybusapp.spichalViews.STextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/selectLocation"
                    android:background="@drawable/round_corner_big_gray_trans"
                    android:text="@string/select_your_location"
                    android:textAlignment="viewStart"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textColor="@color/colorAccent3"
                    android:padding="@dimen/_8sdp"
                    android:drawableEnd="@drawable/ic_map_marker"
                    android:textSize="@dimen/_11ssp" />


            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/statusBusLY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_15sdp"
            android:visibility="gone"
            android:layout_below="@id/selectLocationLY"
            android:paddingTop="@dimen/_12sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:paddingBottom="@dimen/_12sdp">

            <com.mybus.mybusapp.spichalViews.STextViewIcon
                android:id="@+id/item_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="start|center_vertical"
                android:text="@string/fal_power_off"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_15ssp" />

            <com.mybus.mybusapp.spichalViews.STextViewBold
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:maxLines="1"
                android:text="@string/change_bus_status"
                android:textAlignment="viewStart"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_12ssp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.mybus.mybusapp.spichalViews.SSwitch
                android:id="@+id/statusSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18ssp"
                android:theme="@style/SwitchButtonStyle" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/busLoadingLY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_15sdp"
            android:layout_below="@id/statusBusLY"
            android:paddingTop="@dimen/_12sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:visibility="gone"
            android:paddingBottom="@dimen/_12sdp">

            <com.mybus.mybusapp.spichalViews.STextViewIcon
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="start|center_vertical"
                android:text="@string/fal_chair"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_15ssp" />

            <com.mybus.mybusapp.spichalViews.STextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:maxLines="1"
                android:text="@string/numPassenger"
                android:textAlignment="viewStart"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_12ssp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.mybus.mybusapp.spichalViews.STextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/busLoadingTv"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_12ssp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/emptyseatLY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_15sdp"
            android:layout_below="@id/busLoadingLY"
            android:visibility="gone"
            android:paddingTop="@dimen/_12sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:paddingBottom="@dimen/_12sdp">

            <com.mybus.mybusapp.spichalViews.STextViewIcon
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="start|center_vertical"
                android:text="@string/fal_chair"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_15ssp" />

            <com.mybus.mybusapp.spichalViews.STextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:maxLines="1"
                android:text="@string/num_empty_seat"
                android:textAlignment="viewStart"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_12ssp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.mybus.mybusapp.spichalViews.STextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/emptyseatTv"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_12ssp"
                />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>

